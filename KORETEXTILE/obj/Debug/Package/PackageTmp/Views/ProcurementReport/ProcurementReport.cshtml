@section scripts{
    <script src="~/Scripts/Search.js"></script>
    <script src="~/Scripts/ReportSearch.js"></script>
    <script>
        $(".select2").select2();
        var isValid = "";
        $('.date').datepicker({
            autoclose: true,
            format: "dd-mm-yyyy"
        });

        var supplierId = "";
        //$(document).on('click', "#showBatchWiseProduction", function (event) {
        //    event.preventDefault();
        //    validateOnBatchWiseProduction();
        //    if (isValid == "") {
        //        if ($("#message").val() != "true") {
        //            $("#Depot").val($("#DepotId").val());
        //            $("#report").attr("action", "/ProductionReport/GetBatchWiseProduction")
        //            $("#report").submit();
        //        }
        //    }
        //});
        $(document).on('change', "#SupplierGroup", function () {

            $("#SupplierID").prop('disabled', false);
            var id = { sGroupId: $(this).val() };
            if (id.sGroupId != "") {
                $.ajax({
                    url: '@Url.Action("GetSupplierByGroupId", "ProcurementReport")',
                    contentType: "application/json;charset=utf-8",
                    data: id,
                    type: 'GET',
                    dataType: 'json',
                    success: function (datas) {
                        $("#SupplierID").empty();
                        $("#SupplierID").prop("disabled", false);
                        $.each(datas, function (index, value) {
                            $("#SupplierID").append($('<option />', {
                                value: value.Value,
                                text: value.Text
                            })).trigger('change');
                        });
                        $("#SupplierID").focus();
                        if (supplierId != "") {
                            $("#SupplierID").val(supplierId).change();
                            $("#SupplierID").prop('disabled', true);
                            supplierId = "";
                        }
                    }
                });
            }
            else {
                $("#SupplierID").val("").change();
                $("#SupplierID").prop("disabled", true);
            }
        });

        //     supplier wise work order summary
        $(document).on('click', "#supplierwisegwosummary", function (event) {
        event.preventDefault();
        ValidateReportSearchParam(["From", "To"]);
        if ($("#message").val() != "true") {
            $("#ProcurementReport").attr("action", "/ProcurementReport/Supplierwisewosummary")
            $("#ProcurementReport").submit();
        }
        });
        //     supplier wise work order details
        $(document).on('click', "#supplierwisegwodetails", function (event) {
            event.preventDefault();
            ValidateReportSearchParam(["From", "To"]);
            if ($("#message").val() != "true") {
                $("#ProcurementReport").attr("action", "/ProcurementReport/Supplierwisewodetails")
                $("#ProcurementReport").submit();
            }
        });
        //     Item wise work order Summary
        $(document).on('click', "#itemwisegwosummary", function (event) {
            event.preventDefault();
            ValidateReportSearchParam(["From", "To"]);
            if ($("#message").val() != "true") {
                $("#ProcurementReport").attr("action", "/ProcurementReport/Itemwisegwosummary")
                $("#ProcurementReport").submit();
            }
        });
        // to show Supplier and item wise purchase summary
        $(document).on('click', "#showSupItemPurchaseSummary", function (event) {
            event.preventDefault();
            if ($("#SupplierGroup").val() == "") {
                setError("SupplierGroup", "Supplier Group Required Field");
                isValid = "required";
            } else {
                $("#ProcurementReport").attr("action", "/ProcurementReport/GetSupplierItemPurchaseSummary")
                $("#ProcurementReport").submit();
            }


        });


        $(document).on('click', "#showFGPSummary", function (event) {
            event.preventDefault();
            validateOnBatchWiseProduction();
            if (isValid == "") {
                if ($("#message").val() != "true") {

                    $("#ProcurementReport").attr("action", "/ProcurementReport/GetFGPSummary")
                    $("#ProcurementReport").submit();
                }
            }
        });
        $(document).on('click', "#itemBalance", function (event) {
            event.preventDefault();
            validateOnStorehWiseItem();
            if (isValid == "") {
                if ($("#message").val() != "true") {

                    $("#ProcurementReport").attr("action", "/ProductionReport/GetStoreWiseItemQty")
                    $("#ProcurementReport").submit();
                }
            }
        });

        //     All Work Order Order By Work Order No
        $(document).on('click', "#allWorkOrderByWONo", function (event) {
            event.preventDefault();
            ValidateReportSearchParam(["From", "To"]);
            if ($("#message").val() != "true") {
                $("#ProcurementReport").attr("action", "/ProcurementReport/showAllWorkOrderByWONo")
                $("#ProcurementReport").submit();
            }
        });


        //    Yet to receive work order
        $(document).on('click', "#workorderyettoreceive", function (event) {
            event.preventDefault();
            //ValidateReportSearchParam(["From", "To"]);
            //if ($("#message").val() != "true") {
            //    $("#report").attr("action", "/SupplierReport/Yettoreceiveworkorder")
            //    $("#report").submit();
            //}
            $("#ProcurementReport").attr("action", "/ProcurementReport/Yettoreceiveworkorder")
            $("#ProcurementReport").submit();
        });

        function validateOnBatchWiseProduction() {
            isValid = "";
            RemoveError();
            if ($("#BatchId").val() == "") {
                setError("BatchId", "Batch No is Required Field");
                isValid = "required";
            }
        }
        function validateOnStorehWiseItem() {
            isValid = "";
            RemoveError();
            if ($("#StoreId").val() == "") {
                setError("StoreId", "Store is Required Field");
                isValid = "required";
            }
            if ($("#RootAccountType").val() == "") {
                setError("RootAccountType", "Inventory Type is Required Field");
                isValid = "required";
            }
        }


    </script>
}



