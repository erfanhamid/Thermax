                                                }
                                                <button class="btn skin-blue" id="supplierwisegwodetails" type="submit">@i. Supplier Wise Work Order Details</button>
                                            </div>
                                            <div class="form-group" style="text-align:center;">
                                                @{
                                                    i = i + 1;
                                                }
                                                <button class="btn skin-blue" id="supplierwisegwosummary" type="submit">@i. Supplier and Item Wise Work Order Summary</button>
                                            </div>
                                            <div class="form-group" style="text-align:center;">
