                    receiveVoucher.CostGroupID = $("#CostGroupID").val();
                    receiveVoucher.BussinessUnitId = $("#BussinessUnitId").val();

                    if (confirm("Do you want to Save?"))
                    {
                        $.ajax(
                        {
                            url: '@Url.Action("SaveReceiveVoucher", "ReceiveVoucher")',
                            contentType: "application/json;charset=utf-8",
                                data: JSON.stringify({ receiveVoucher: receiveVoucher }),
                            type: "POST",
                            dataType: "json",
                            success: function (datas)
                            {
                                if (datas.Message == 1) {
                                    alert("Saved Successfully");
                                    //location.reload();
                                    $("#RVNo").val(datas.rVNo);
                                    $("#save").hide();
                                    $("#print").show();

                                } else if (datas == 3) {
                                    alert("Please select a valid entry date");
                                    $("#RVDate").focus();
                                    $("#save").prop('disabled', false);
                                }
                                else if (datas.Message == 0)
                                {
                                    alert("Please recheck data if it is not solve the problem.\n Then Contact with Avalanche Technology Ltd.");
                                    $("#save").prop("disabled", false);
                                }
                            },
                            error: function ()
                            {
                                alert("Please check Internet connection. If doesn't solve problem. Contact with Avalanche Technology Ltd.");
                                $("#save").prop("disabled", false);
                            }
                        });
                    }
                }
            });

            //Search
            $(document).on('click', "#search", function () {
