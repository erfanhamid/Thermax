            //Update
            $(document).on('click', '#update', function () {
                RemoveError();
                ValidateOnSaveClick();
                $("#update").prop("disabled", false);
                if (message == "") {
                    var receiveVoucher = { RVNo: 0, RVDate: "", RVAmount: 0.0, ReceiveAccountID: 0, CreditAccountID: 0, PayeeName: "", Description: "", RefNo: "", BranchID: 0, CostGroupID: 0, BussinessUnitId: 0 };
