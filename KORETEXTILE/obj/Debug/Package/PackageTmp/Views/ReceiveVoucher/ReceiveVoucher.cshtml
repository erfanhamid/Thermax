                    if (confirm("Do you want to Update?"))
                    {
                        $.ajax(
                        {
                            url: '@Url.Action("UpdateReceiveVoucher", "ReceiveVoucher")',
                            contentType: "application/json;charset=utf-8",
                                data: JSON.stringify({ receiveVoucher: receiveVoucher }),
                            type: "POST",
                            dataType: "json",
                            success: function (datas)
                            {
                                if (datas.Message == "0") {
                                    alert("Critical Error! Please try Again. \n If retry doesn't solve your problem, then Contact With Paankouri Software & Services");
                                    $("#update").prop('disabled', false);
                                }
                                else if (datas.Message == "1") {
                                    alert("Sccessfully updated.")
                                    $("#update").prop('disabled', true);
                                    //location.reload();
                                }
                                else if (datas.Message == "2") {
                                    alert("This Receive Voucher Doesn't exist.");
                                    $("#update").prop('disabled', false);
                                }
                                if (datas.Message == 5) {
                                    alert("This Voucher Is already Approve, so Update is not available.");
                                    $("#update").prop('disabled', false);
                                }
                            },
                            error: function ()
                            {
                                alert("Please check Internet connection. If doesn't solve problem. Contact with Avalanche Technology Ltd.");
                                $("#save").prop("disabled", false);
                            }
                        });
                    }
                }
            });

            //Delete
            $(document).on('click', '#delete', function () {
                $("#update").prop('disabled', true);
                $("#delete").prop('disabled', true);
                var id = $("#RVNo").val();
                if (confirm('Are you sure you want to delete this from the database?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteRVById", "ReceiveVoucher")',
                        contentType: "application/json;charset=utf-8",
                        data: { id: id },
                        type: 'GET',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas == 0) {
                                alert("Delete failed.");
                                $("#delete").prop('disabled', false);
                                $("#update").prop('disabled', false);
                            }
                            //else if (datas.Message == 2) {
                            //    alert("This Voucher Is already Approve, so Delete is not available.");
                            //    $("#delete").prop('disabled', false);
                            //    $("#update").prop('disabled', false);
                            //}
                            else {
                                alert("Delete Successfull");
                                window.location.reload(true);
                            }
                        }
                    });
                }
                else {
                    $("#update").prop('disabled', false);
                    $("#delete").prop('disabled', false);
                }
            });


            //Validation
            function ValidateOnSaveClick() {
                message = "";
                if ($("#RVAmount").val() == "") {
                    setError("RVAmount", "Please enter valid amount");
                    message = "Amount is Required Field."
                }
                if ($("#ReceiveAccountID").val() == "") {
                    setError("ReceiveAccountID", "Please select a receive account from the list");
                    message = "Receive Account is Required Field."
                }
                if ($("#RVDate").val() == "") {
                    setError("RVDate", "Please select a date from the calendar");
                    message = "RVDate Account is Required Field."
                }
                if ($("#CreditAccountID").val() == "") {
                    setError("CreditAccountID", "Please select a credit account");
                    message = "Credit Account is Required Field."
                }
                if ($("#PayeeName").val() == "") {
                    setError("PayeeName", "Please select a name or enter a name if not in list");
                    message = "Receiver Name is Required Field."
                }
                if ($("#BranchID").val() == "") {
                    setError("BranchID", "Please select a cost center from the list");
                    message = "Cost Center is Required Field."
                }
                if ($("#CostGroupID").val() == "") {
                    setError("CostGroupID", "Please select a cost group from the list");
                    message = "Cost Group is Required Field."
                }
                if ($("#BussinessUnitId").val() == "") {
                    setError("BussinessUnitId", "Please select a Bussiness Unit from the list");
                    message = "Bussiness Unit is Required Field."
                }
            }

