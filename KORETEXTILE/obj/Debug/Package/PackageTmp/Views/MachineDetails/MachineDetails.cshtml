@section scripts
{
    <script src="~/Scripts/CommercialModule/LTRInputFocus.js"></script>
    <script>

        $(function () {
            $('#MachineDetails').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })

        var isValid = true;
        var md = { MachineID: 0, MachineSerial: "", CompanyID: 0,BrandID:0, CountryID:0, ModelNo: "", MFGYear: 0, MSection:0 }

        $("#preview").prop("disabled", true);

        $(document).ready(function () {

            $('.date').datepicker({
                autoclose: true,
                format: 'dd-mm-yyyy',
            });
            $(".select2").select2();
            $("#update").hide();
            $("#delete").hide();
          /*  EnterPress();*/
        });


        $(document).on('click', "#refresh", function () {
            location.reload();
        });

        // REPORT
        $(document).on('click', "#report", function () {
            event.preventDefault();

                    $("#report").attr("action", "/MachineDetails/ShowMachineList")
                    $("#report").submit();
             
          
        });

        // TextBox FillUp

        $(document).on('click', '.clickable-row', function () {
            var id = $(this).attr("value");
            $.ajax({
                url: '@Url.Action("GetMachineDetailsByid","MachineDetails")',
                contentType: "application/json;charset = utf-8",
                data: { id: id },
                type: 'GET',
                dataType: 'json',
                success: function (datas) {
                    if (datas == 0) {
                        alert("This Machine Details Deoesn't Exist");
                    }
                    else {
                        $("#save").prop('disabled', true);
                        $("#update").show();
                        $("#delete").show();
                        $("#MachineID").val(datas.item.MachineID);
                        $("#MachineSerial").val(datas.item.MachineSerial);
                        $("#ModelNo").val(datas.item.ModelNo);
                        $("#MFGYear").val(datas.item.MFGYear).change();
                        $("#CompanyID").val(datas.item.CompanyID).change();
                        $("#CountryID").val(datas.item.CountryID).change();
                        $("#BrandID").val(datas.item.BrandID).change();
                        $("#MSection").val(datas.item.MSection).change();


                    }
                }
            });
        });

        //Save
         $(document).on('click', '#save', function (e) {
            $("#save").prop('disabled', true);
            RemoveError();
            Validatemd();
            //$("#save").prop('disabled', true);
            if (isValid == true) {
                if (confirm('Do you want to save?')) {
                    setmdData();
                   $.ajax({
                    url: '@Url.Action("SaveMachineDetails", "MachineDetails")',
                    contentType: "application/json;charset=utf-8",
                       data: JSON.stringify({ md: md }),
                    type: 'POST',
                    dataType: 'json',
                       success: function (datas) {
                           if (datas == 1) {
                               alert("Saved Successfully");
                               $("#save").prop('disabled', true);
                               location.reload();
                           }

                           else {
                               alert("Saved Failed.");
                           }
                       }
                   });
                }
                else {
                    $("#save").prop('disabled', false);

                }
            }
            else {
                $("#save").prop('disabled', false);
            }
         });

           //update
        $(document).on('click', '#update', function () {
            $("#update").prop('disabled', true);
            $("#MachineID").prop('disabled', true);
            setmdData();
            md.MachineID = $("#MachineID").val();
            Validatemd();

                if (confirm('Do you want to Update')) {
                    $.ajax({
                        url: '@Url.Action("UpdateMachineDetails", "MachineDetails")',
                        contentType: "application/json;charset=utf-8",
                        data: JSON.stringify({ md: md }),
                        type: 'POST',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas == 0) {
                                alert("Failed To Update.");
                                $("#update").prop('disabled', false);
                                $("#MachineID").prop('disabled', false);
                            }
                            else {
                                alert("Sucessfully Updated.");
                                $("#update").prop('disabled', true);
                                $("#MachineID").prop('disabled', true);
                                location.reload();
                            }
                        }
                    });
                }
                else {
                    $("#update").prop('disabled', false);
                    $("#MachineID").prop('disabled', false);
                }
        });


         $(document).on('click', '#delete', function () {
            $("#update").prop('disabled', true);
             $("#delete").prop('disabled', true);
             var id = $("#MachineID").val();
            if (confirm('Are you sure you want to delete this from the database?')) {
                $.ajax({
                    url: '@Url.Action("DeleteMachineDetails", "MachineDetails")',
                    contentType: "application/json;charset=utf-8",
                    data: {id: id},
                    type: 'GET',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas == 0) {
                            alert("This Item has Transaction you can't Delete.");
                        }
                        else {
                            alert("Delete Successful");
                            $("#delete").prop('disabled', true);
                            location.reload();
                        }
                    }
                });
            }
        });

        function setmdData() {

            md.MachineID = $("#MachineID").val();
            md.MachineSerial = $("#MachineSerial").val();
            md.ModelNo = $("#ModelNo").val();
            md.CompanyID = $("#CompanyID").val();
            md.CountryID = $("#CountryID").val();
            md.BrandID = $("#BrandID").val();
            md.MFGYear = $("#MFGYear").val();
            md.MSection = $("#MSection").val();

        }

        function Validatemd() {
            isValid = true;

            if ($("#MachineSerial").val() == "") {
                setError("MachineSerial", "Machine Serial is required field");
                isValid = false;
            }
            if ($("#CompanyID").val() == "") {
                setError("CompanyID", "Unit Name is required field");
                isValid = false;
            }
            if ($("#CountryID").val() == "") {
                setError("CountryID", "Country Name is required field");
                isValid = false;
            }
            if ($("#BrandID").val() == "") {
                setError("BrandID", "Brand Name is required field");
                isValid = false;
            }
            if ($("#MFGYear").val() == "") {
                setError("MFGYear", "MFG Year is required field");
                isValid = false;
            }
            if ($("#MSection").val() == "") {
                setError("MSection", "Machine Section is required field");
                isValid = false;
            }

        }

    </script>

}

