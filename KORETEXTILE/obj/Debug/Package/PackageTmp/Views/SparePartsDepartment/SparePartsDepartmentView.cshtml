@section scripts{
    <script>
        $(function () {
            $('#DepartmentList').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })

        $(document).ready(function () {

            $("#update").hide();
            $("#delete").hide();

            //$(document).on('click', '#edit', function () {
            //    var id = $(this).attr("value");
            //});

            $(document).on('click', '#refresh', function () {
                window.location.reload(true);
            });


            $(document).on('click', '#save', function () {
            ValidateOnSaveClick()
            //$("#save").prop('disabled', true);
            if (isValid == true)
            {
                var spd = { SPDID: 0, SPDName: "" };
                spd.SPDID = $("#SPDID").val();
                spd.SPDName = $("#SPDName").val();
                if (confirm('Do you want to Save?')) {
                    $.ajax({
                        url: '@Url.Action("SaveSPDepartment", "SparePartsDepartment")',
                        contentType: "application/json;charset=utf-8",
                        data: JSON.stringify({ spd: spd }),
                        type: 'POST',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas.Message == 0) {
                                alert("SP Department Name already exists");
                                $("#save").prop('disabled', false);
                            }
                            else {
                                alert("Saved Successfully");
                                location.reload();
                            }
                        }
                    });
                }
                else {
                    $("#save").prop('disabled', false);
                }
            }
            else {
                //alert(message);
                $("#save").prop('disabled', false);
            }
            });
           // $(".clickable-row").on('click', function (e) {
            $(document).on('click', ".clickable-row", function () {
                var id = $(this).attr("value");

                 $.ajax({
                    url: '@Url.Action("GetSPDepartment", "SparePartsDepartment")',
                    contentType: "application/json;charset=utf-8",
                     data: JSON.stringify({ id: id }),
                    type: 'POST',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas.Message==0)
                        {
                            alert("This SP Department  doesn't exist.");
                        }
                        else {
                            $("#save").hide();
                            $("#update").show();
                            //$("#delete").show();
                            $("#SPDID").val(datas.info.SPDID);
                            $("#SPDName").val(datas.info.SPDName);

                        }
                    }
                });
            });
            $(document).on('click', '#update', function () {
            ValidateOnSaveClick()
            $("#update").prop('disabled', true);
            if (isValid == true)
            {
                var spd = { SPDID: 0, SPDName: "" };
                spd.SPDID = $("#SPDID").val();
                spd.SPDName = $("#SPDName").val();
                if (confirm('Do you want to update?')) {
                    $.ajax({
                        url: '@Url.Action("UpdateSPDepartment", "SparePartsDepartment")',
                        contentType: "application/json;charset=utf-8",
                        data: JSON.stringify({ spd: spd }),
                        type: 'POST',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas == 1) {
                                alert("Name already existed");
                                $("#update").prop('disabled', false);
                            }
                            else {
                                alert("Updated Successfully");
                                location.reload();
                            }
                        }
                    });
                }
                else {
                    $("#update").prop('disabled', false);
                }
            }
            else {
                //alert(message);
                $("#update").prop('disabled', false);
            }
            });

            $(document).on('click', '#delete', function () {
                $("#update").prop('disabled', true);
                $("#delete").prop('disabled', true);
                var id = $("#DeptmentID").val();
                if (confirm('Are you sure you want to delete this from the database?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteDepartmentByid", "Department")',
                        contentType: "application/json;charset=utf-8",
                        data: { id: id },
                        type: 'GET',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas == 0) {
                                alert("Delete failed.");
                            }
                            else {
                                alert("Delete Successfull");
                                location.reload();
                            }
                        }
                    });
                }
            });

            function ValidateOnSaveClick() {
                isValid = true;
                if ($("#SPDName").val() == "") {
                    setError("SPDName", "Please enter SP Department Name");
                    isValid = false;
                }
            }

        });

    </script>
}
