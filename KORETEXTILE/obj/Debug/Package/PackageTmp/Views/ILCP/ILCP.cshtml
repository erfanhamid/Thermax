            isValid = true;
            if (lcp.ILCID == "") {
                setError("ILCID", "ILCID is required field");
                isValid = false;
            }
            if (lcp.Date == "") {
                setError("Date", "Date is required field");
                isValid = false;
            }
            if (lcp.AccountID == "") {
                setError("AccountID", "Payment A/C is required field");
                isValid = false;
            }
