    <script>
        $(function () {
            $('#funcDesignationList').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })

        $(document).ready(function () {

            $("#update").hide();
            $("#delete").hide();
        });

