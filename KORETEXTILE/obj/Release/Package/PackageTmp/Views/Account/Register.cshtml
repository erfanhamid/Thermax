                }
                else {
                    $.ajax({
                        dataType: 'json',
                        type: 'GET',
                        contentType: "application/json;charset=utf-8",
                        data: { employeeId: employeeId },
                        url: '@Url.Action("GetEmployeeNameById", "Account")',
                        success: function (data) {
                            if (data == "0") {
                                $("#EmployeeName").val("");
                                $("#EmployeeId").prop("readonly", false);
                                alert("Inserted Employee ID is not valid");
                            }
                            else {
                                //$("#EmployeeId").prop("readonly", true);
                                $("#EmployeeName").val(data.EmployeeName.Name);
                                if (data.EmployeeName.LogInUserName!="") {
                                    $("#update").show();
                                }
                                $("#UserName").val(data.EmployeeName.LogInUserName);
                                $.each(data.EmployeeRoles, function (index, value) {
                                    $("#"+value.Name).prop('checked', value);
                                });

                            }
                        },
                        error: function () {
                            $("#EmployeeName").val("");
