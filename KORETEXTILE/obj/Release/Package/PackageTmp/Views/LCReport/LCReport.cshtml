@model BEEERP.Models.ViewModel.Sales.Report.ReportVModel
@using BEEERP.Models.CommonInformation
@{
    ViewBag.Title = "LCReport";
    int i = 0;
}

<style>

    h3 {
        background: #F1C40F;
        border-radius: 8px;
    }
    /*h3 {
        background: #F5B041;
        border-radius: 8px;
    }*/
    box-title {
        background: #82E0AA;
        border-radius: 8px;
