                                    }
                                    <button class="btn skin-blue" id="showLedger" type="submit">@i. Show Item Ledger</button>
                                </div>
                                <div class="form-group" style="text-align:center;">
                                    @{
                                         i = i + 1;
                                    }
                                    <button class="btn skin-blue" id="StockSummary" type="submit">@i. Show Stock Summary</button>
                                </div>
                                <div class="form-group" style="text-align:center;">
                                    @{
                                         i = i + 1;
                                    }
                                    <button class="btn skin-blue" id="FgitemBalance" type="submit">@i. Show Store Wise Inventory Summary</button>
                                </div>
                                <div class="form-group" style="text-align:center;">
                                    @{
                                         i = i + 1;
                                    }
                                    <button class="btn skin-blue" id="ItemInventorySummary" type="submit">@i. Show Item Wise Consolidated Inventory Summary</button>
                                </div>
                                <div class="form-group" style="text-align:center;">
                                    @{
                                        i = i + 1;
                                    }
                                    <button class="btn skin-blue" id="InvSummary" type="submit">@i. Show Store and Item Wise Inventory Summary</button>
                                </div>
                                <div class="form-group" style="text-align:center;">
                                    @{
                                        i = i + 1;
                                    }
                                    <button class="btn skin-blue" id="StoreWiseInventoryValueSummary" type="submit">@i. Show  Store Wise Inventory Value Summary</button>
                                </div>
                            </div>
                        </div>
                        <br />
                    </div>
                </div>
                </div>
            </div>
        </div>
 
