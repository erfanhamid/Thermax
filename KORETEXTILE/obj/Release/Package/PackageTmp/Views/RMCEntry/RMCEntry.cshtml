                dataType: 'json',
                success: function (datas) {
                    $("#ItemID").empty();
                    $("#ItemID").prop("disabled", false);
                    $.each(datas, function (index, value) {
                        $("#ItemID").append($('<option />', {
                            value: value.Value,
                            text: value.Text
                        })).trigger('change');
                    });
                    //$("#ItemID").focus();
                    if (itemId != "") {
                        $("#ItemID").val(itemId).change();
                        itemId = "";
                    }
                }
            });
        }
        else {
            $("#ItemID").val("").change();
            $("#ItemID").prop("disabled", true);
        }
    });

        $(document).on('change', "#ItemID", function () {
            var id = { id: $(this).val() };
