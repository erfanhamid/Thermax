@model BEEERP.Models.ViewModel.CommercialVM.LATRPVModel
@{
    ViewBag.Title = "LATRP";
}

<style>
    h3 {
        background: #F1C40F;
        border-radius: 8px;
    }

    .btn {
        background-color: #2980B9;
        border: 2px solid groove;
        color: white;
        border-radius: 8px;
        min-width: 80px
    }

        .btn:hover {
            background-color: #82E0AA;
            color: #02110E;
        }

    .select2-selection--single:focus {
        background-color: aqua !important;
    }
</style>

<h3 style="text-align:center">LATR Payment (LATRP) Entry</h3>

<form id="report" target="_blank">
    <div class="content">
        <div class="row">
            <div class="form-horizontal">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box ">
                                <div class="box-header with-border box-head-back" style="background: #82E0AA; text-align: left;">
                                    <h4 class="box-title">LATR Payment Details</h4>
                                </div>
                                <div class="box-body">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.LTRPNo, "LATRP No", new { @class = "col-md-4 control-label" })
                                            <div class="col-sm-8 input-group" style="padding-left:3%; padding-right:3%;">
                                                @Html.TextBoxFor(m => m.LTRPNo, new { @class = "form-control", @type = "number" })
                                                @Html.ValidationMessageFor(m => m.LTRPNo, "", new { @style = "color: red" })
                                                <div class="input-group-btn">
                                                    <input type="button" name="search" id="search" value="Search" class="btn btn-primary" style="min-width: 50px" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ILCId, "ILC", new { @class = "col-md-4 control-label" })
                                            <div class="col-sm-8">
                                                @Html.DropDownListFor(m => m.ILCId, (IEnumerable<SelectListItem>)ViewBag.ILC, new { @class = "form-control select2" })
                                                @Html.ValidationMessageFor(m => m.ILCId, "", new { @style = "color: red" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.AitILCNo, new { @class = "col-md-4 control-label" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(m => m.AitILCNo, new { @class = "form-control", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.AitILCNo, "", new { @style = "color: red" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Supplier, new { @class = "col-md-4 control-label" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(m => m.Supplier, new { @class = "form-control", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.Supplier, "", new { @style = "color: red" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Date, new { @class = "col-md-4 control-label" })
                                            <div class="col-sm-8 input-group" style="padding-left:3%; padding-right:3%">
                                                @Html.TextBoxFor(m => m.Date, new { @class = "form-control date", @Value = DateTime.Now.ToString("dd-MM-yyyy") })
                                                @Html.ValidationMessageFor(m => m.Date, "", new { @style = "color: red" })
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="box">
                                <div class="box-body" style="padding-right:5%;padding-left:0%;">
                                    <div class="col-md-3"></div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.GL,"General Ledger", new { @class = "col-md-4 control-label" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(m => m.GL, new { @class = "form-control", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(m => m.GL, "", new { @style = "color: red" })
                                            </div>
                                        </div>
                                        <div class="form-group" style="padding-right: 0%;">
                                            @Html.LabelFor(m => m.LTRID, "LATR ID", new { @class = "col-md-4 control-label" })
                                            <div class="col-sm-8">
                                                @Html.DropDownListFor(m => m.LTRID, (IEnumerable<SelectListItem>)ViewBag.LTRID, new { @class = "form-control select2" })
                                                @Html.ValidationMessageFor(m => m.LTRID, "", new { @style = "color: red" })
                                            </div>
                                        </div>
                                        <div class="form-group" style="padding-right: 0%;">
                                            @Html.LabelFor(m => m.LTRNo, "LATR No", new { @class = "col-md-4 control-label" })
                                            <div class="col-sm-8">
                                                @Html.DropDownListFor(m => m.LTRNo, (IEnumerable<SelectListItem>)ViewBag.LTRNo, new { @class = "form-control select2" })
                                                @Html.ValidationMessageFor(m => m.LTRNo, "", new { @style = "color: red" })
                                            </div>
                                        </div>




                                        <div class="form-group">
                                            @Html.LabelFor(m => m.AccountID, "Select Payment A/C", new { @class = "col-md-4 control-label" })
                                            <div class="col-sm-8">
                                                @Html.DropDownListFor(m => m.AccountID, (IEnumerable<SelectListItem>)ViewBag.Account, new { @class = "form-control select2" })
                                                @Html.ValidationMessageFor(m => m.AccountID, "", new { @style = "color: red" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Amount, new { @class = "col-md-4 control-label" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @type = "number" })
                                                @Html.ValidationMessageFor(m => m.Amount, "", new { @style = "color: red" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.RefNo, new { @class = "col-md-4 control-label" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(m => m.RefNo, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.RefNo, "", new { @style = "color: red" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Description, new { @class = "col-md-4 control-label" })
                                            <div class="col-sm-8">
                                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color: red" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="box">
                                    <div class="box-footer">
                                        <div class="form-group" , style="text-align:center">
                                            <input type="button" value="Save" id="save" class="btn btn-primary" style="padding-left:20px;" />
                                            <input type="button" name="update" id="update" value="Update" class="btn btn-primary" />
                                            <input type="button" name="delete" id="delete" value="Delete" class="btn btn-primary" />
                                            <input type="button" name="clear" id="clear" value="Refresh" class="btn btn-primary" />
                                            <input type="button" name="refresh" id="refresh" value="Refresh" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="vatPer" />
    <input type="hidden" id="NetAmount" />
</form>

@section Scripts
{
    <script src="~/Scripts/AccountModule/LTRAInputFocus.js"></script>
    <script>

        $('.date').datepicker({
            autoclose: true,
            format: 'dd-mm-yyyy',
        });

         $(document).ready(function () {
            $("#update").hide();
            $("#delete").hide();
            $("#clear").hide();
             //$("#print").hide();
             //$("#AccountID").prop('disabled', true);
             $("#ILCId").focus();
        });
        EnterPress(isUpdate);
        var accountID = "";
        var ltrno = "";
        var isUpdate = false;
        var isValid = true;
      
        var ltra = { LTRPNo: 0, Date: "", LTRID: 0, AccountID: 0, Amount: 0.0, Description: "", ILCId: 0, RefNo: ""}

        $(document).on('click', "#refresh", function () {
            window.location.reload(true);
        });

        $(".select2").select2();

        $(document).on('change', "#ILCId", function () {
            //var id = { liId: $("#ILCID").val() };
            $("#ILCId").prop('disabled', false);
            var id = { liId: $(this).val() };
            if (id.ilcid != "") {
                $.ajax({
                    url: '@Url.Action("GetLcInfo", "ILCPaymentEntry")',
                    contentType: "application/json;charset=utf-8",
                    data: id,
                    type: 'GET',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas.lcDetails != "") {
                            //$("#ILCNo").val(datas.lcDetails.ILCNo);
                            $("#AitILCNo").val(datas.lcDetails.AltILCNo);
                            $("#Supplier").val(datas.lcDetails.Supplier);
                        }
                        else {
                            alert("LC doesn't exist.");
                        }
                    }
                });
            }
            else {
                $("#ILCId").val("").change();
                $("#ILCId").prop("disabled", true);
            }

        });

        $(document).on('click', "#go", function () {
            RemoveError();
            var id = { lcId: $("#ILCId").val() };
            if (id.lcId != "") {
                $.ajax({
                    url: '@Url.Action("LoadLCInfo", "LATRP")',
                    contentType: "application/json;charset=utf-8",
                    data: id,
                    type: 'GET',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas.lcInfo != null) {
                            $("#ILCNo").val(datas.lcInfo.ILCNo);
                            $("#AitILCNo").val(datas.lcInfo.AitILCNo);
                            $("#Supplier").val(datas.lcInfo.Supplier);
                            $("#GL").val(datas.BankAc);
                        }
                        else {
                            alert("No Lc Record Found To The Lc No " + id.lcId + ".");
                        }
                        //if (datas.LTR.length != 0) {
                        //    $("#LTRNo").empty();
                        //    $.each(datas.LTR, function (index, value) {
                        //        $("#LTRNo").append($('<option />', {
                        //            value: value.Value,
                        //            text: value.Text
                        //        })).trigger('change');
                        //    });
                        //    if (ltrno != "") {
                        //        $("#LTRNo").val(ltrno).change();
                        //    }
                        //}
                        //else {
                        //    alert("No LTR No Found To The Lc No " + id.lcId + ".");
                        //}
                        //if ($("#LTRID").val() != "") {
                        //    $("#LTRgo").click();
                        //}

                    }
                });
            }
            else {
                setError("ILCId", "ILC Id is required field.");
            }

        });

        $(document).on('change', "#LTRNo", function (e) {
            e.preventDefault();
            var id = { lTRNo: $("#LTRNo").val(), date: $("#Date").val() };
            if ( id.lTRNo != "") {
                $.ajax({
                    url: '@Url.Action("LoadLTRInfo", "LATRP")',
                    contentType: "application/json;charset=utf-8",
                    data: id,
                    type: 'GET',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas != 0) {
                          
                            if (datas.ltrInfo.LTRID != parseFloat($("#LTRID").val())) {
                                $("#LTRID").val(datas.ltrInfo.LTRID).change();
                            }
                              
                                
                            
                            
                            //$("#LTRID").attr("disabled", true);
                            $("#ILCId").val(datas.ltrInfo.LCID);
                            $("#go").click();
                            

                        }
                        else {
                            alert("No Lc Record Found To The Lc No " + id.lcId + ".");
                            //$("#LTRID").attr("disabled", false);
                            $("#LTRID").val("");

                        }
                        
                    }

                });
            }
           
        });
        $(document).on('change', "#LTRID", function (e) {
            e.preventDefault();
            var id = { LTRID: $("#LTRID").val() };
            if ( id.lTRNo != "") {
                $.ajax({
                    url: '@Url.Action("LoadLTRNoByID", "LATRP")',
                    contentType: "application/json;charset=utf-8",
                    data: id,
                    type: 'GET',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas != 0) {
                            if (datas.ltrno != $("#LTRNo").val()) {
                                $("#LTRNo").val(datas.ltrno).change();
                            } 
                                                        
                            //$("#LTRID").attr("disabled", true);
                        
                        }
                        else {
                            alert("No Lc Record Found To The Lc No " + id.lcId + ".");
                            //$("#LTRID").attr("disabled", false);
                            $("#LTRID").val("");

                        }
                      
                    }

                });
            }
            //else {
            //    if (id.lcId == "") {
            //        setError("ILCId", "ILC Id is required field.");
            //    }
            //}
        });



        $(document).on('click', "#save", function () {
            RemoveError();
           
            Setltra();
            ValidateLtra();
            if (isValid == true) {
                if (confirm('Do you want to save')) {
                    $.ajax({
                        url: '@Url.Action("SaveLtrp", "LATRP")',
                        contentType: "application/json;charset=utf-8",
                        data: JSON.stringify({ ltra: ltra }),
                        type: 'POST',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas == 0) {
                                alert("Failed To Saved.");
                                $("#save").prop('disabled', false);
                            }
                            else if (datas == 1) {
                                alert("Please Enter a valid LATR ID.");
                                $("#save").prop('disabled', false);
                            }
                            else if (datas == 3) {
                                alert("Please select a valid entry date");
                                $("#Date").focus();
                                $("#save").prop('disabled', false);
                            }
                            else
                                {
                                alert("Sucessfully Saved.");
                                $("#LTRPNo").val(datas.ltra.LTRPNo);
                                $("#save").prop('disabled', true);
                            }
                        }
                    });
                }
                else {
                    $("#save").prop('disabled', false);
                }
            }
            else {
                $("#save").prop('disabled', false);
            }
        });

        $(document).on('click', "#search", function () {
            RemoveError();
            var id = { id: $("#LTRPNo").val() };
            if (id != "") {
                $.ajax({
                    url: '@Url.Action("GetLTRAById", "LATRP")',
                    contentType: "application/json;charset=utf-8",
                    data: id,
                    type: 'GET',
                    dataType: 'json',
                    success: function (datas) {

                        if (datas == 0) {
                            alert("Your entered LATRP No. Doesn't exist");
                            $("#search").attr('disabled', false);
                        }
                        else {
                            $("#save").hide();
                            $("#update").show();
                            $("#delete").show();
                            //$("#print").show();
                            $("#search").attr('disabled', true);
                            $("#Date").val((moment(datas.ltraItem.Date).format("DD-MM-YYYY")));
                            $("#LTRID").val(datas.ltraItem.LTRID).change();
                            //$("#Type").val(datas.ltraItem.Type).change();
                            $("#AccountID").val(datas.ltraItem.AccountID).change();
                            $("#Amount").val(datas.ltraItem.Amount);
                            $("#Description").val(datas.ltraItem.Description);
                            //$("#ILCId").val(datas.ltraItem.ILCId);
                            $("#RefNo").val(datas.ltraItem.RefNo);
                            isUpdate = true;
                            EnterPress(isUpdate);
                            //$("#go").click();
                            ltrno = datas.ltrNo;
                            //var x = parseFloat(data.ltra.Amount) - parseFloat(datas.ltraItem.Amount);
                            //$("#BalanceAmount").val(x);
                            //accountID = datas.ltraItem.AccountID;

                        }
                    },
                    error: function () {
                        alert("Please check your internet connection first. If this doesn't solve your problem, then Contact With Paankouri Software & Services");
                    }
                });
            }
            else {
                setError("LTRANo", "LATRP No Is required for Get Data.");
            }

        });

        $(document).on('click', "#update", function () {
            RemoveError();
            $("#update").prop('disabled', true);
            Setltra();
            ValidateLtra();
            ltra.LTRANo = $("#LTRPNo").val();
            if (confirm('Do you want to Update')) {
                if (isValid == true) {
                $.ajax({
                    url: '@Url.Action("UpdateLtra", "LATRP")',
                    contentType: "application/json;charset=utf-8",
                    data: JSON.stringify({ ltra: ltra }),
                    type: 'POST',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas == 0) {
                            alert("Failed To Update.");
                            $("#update").prop('disabled', false);
                        } else if (datas == 1) {
                            alert("Please Enter a valid LATR ID.");
                            $("#update").prop('disabled', false);
                        }

                        else {
                            alert("Sucessfully Updated.");
                            window.location.reload(true);
                            
                        }
                    }
                });
            }
                else {
                    $("#update").prop('disabled', false);
                }
            }
            else {
                $("#update").prop('disabled', false);
            }
        });

        $(document).on('click', "#delete", function () {
            $("#update").prop('disabled', true);
            $("#delete").prop('disabled', true);
            var id = $("#LTRPNo").val();
            if (confirm('Are you sure you want to delete this from the database?')) {
                $.ajax({
                    url: '@Url.Action("DeleteLtraByid", "LATRP")',
                    contentType: "application/json;charset=utf-8",
                    data: { id: id },
                    type: 'GET',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas == 0) {
                            alert("Delete failed.");
                            $("#delete").prop('disabled', false);
                            $("#update").prop('disabled', false);
                        }
                        else {
                            alert("Delete Successfull");
                            window.location.reload(true);
                        }
                    }
                });
            }
            else {
                $("#update").prop('disabled', false);
                $("#delete").prop('disabled', false);
            }
        });

        //$(document).on('click', "#print", function () {
        //    RemoveError();

        //    isValid = true;

        //    if ($("#LTRANo").val() == "") {
        //        setError("LTRANo", "LTRA is Required field.");
        //        isValid = false;
        //    }


        //    if (isValid == true) {
        //        $("#report").attr("action", "/LTRA/LTRAPrintPreview");
        //        event.preventDefault();
        //        $("#report").submit();
        //    }

        //});

        function Setltra() {
            ltra.LTRPNo = $("#LTRPNo").val();
            ltra.Date = $("#Date").val();
            ltra.LTRID = $("#LTRID").val();
            //ltra.Type = $("#Type").val();
            ltra.AccountID = $("#AccountID").val();
            ltra.Amount = $("#Amount").val();
            ltra.Description = $("#Description").val();
            ltra.ILCId = $("#ILCId").val();
            ltra.RefNo = $("#RefNo").val();

        }
        function ClearOnSave() {
            $("#LTRID").val("");
            $("#AccountID").val("").change();;
            $("#Amount").val("");
            $("#Description").val("");
            $("#RefNo").val("");
            $("#ILCNo").val("");
            $("#AitILCNo").val("");
            $("#Supplier").val("");
            $("#LTRNo").val("").change();
            $("#GL").val("");
            $("#ILCId").val("");



        }

        function ValidateLtra() {
            isValid = true;
            if (ltra.Date == "") {
                setError("Date", "Date is required field");
                isValid = false;
            }
            if (ltra.LTRID == "") {
                setError("LTRID", "LATR ID is required field");
                isValid = false;
            }
            if (ltra.AccountID == "") {
                setError("AccountID", "Please select payment account");
                isValid = false;
            }
            if (ltra.Amount == "") {
                setError("Amount", "Please enter amount");
                isValid = false;
            }
            if (ltra.ILCId == "") {
                setError("ILCId", "Please select an ILC");
                isValid = false;
            }
        }

    </script>
}



