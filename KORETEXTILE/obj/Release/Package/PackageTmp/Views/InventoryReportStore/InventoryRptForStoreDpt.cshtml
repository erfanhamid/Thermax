@model BEEERP.Models.StoreDepot.InventoryVReport

@{
    ViewBag.Title = "InventoryRptForStoreDpt";
}

<h2 style="text-align:center">Inventory Repot</h2>

<div class="content">
    <div class="row">
        <div class="form-horizontal">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="box ">
                            <div class="box-header with-border box-head-back">
                                <h3 class="box-title">Date Range</h3>
                            </div>
                            <div class="box-body">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.DateFrom, "Date From", new { @class = "col-md-4 control-label" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.DateFrom, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.DateFrom)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.DateTo, "Date To", new { @class = "col-md-4 control-label" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.DateTo, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.DateTo)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.AsOnDate, "As On Date", new { @class = "col-md-4 control-label" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.AsOnDate, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.AsOnDate)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box ">
                            <div class="box-header with-border box-head-back">
                                <h3 class="box-title">Select Depot</h3>
                            </div>
                            <div class="box-body">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.DepotFrom, "Depot From", new { @class = "col-md-4 control-label" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.DepotFrom, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.DateFrom)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.StoreFrom, "Store From", new { @class = "col-md-4 control-label" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.StoreFrom, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.StoreFrom)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.DepotTo, "Depot To", new { @class = "col-md-4 control-label" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.DepotTo, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.DepotTo)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.StoreTo, "Store To", new { @class = "col-md-4 control-label" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.StoreTo, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.StoreTo)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box ">
                            <div class="box-header with-border box-head-back">
                                <h3 class="box-title">Select Item Or Group</h3>
                            </div>
                            <div class="box-body">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Group, new { @class = "col-md-4 control-label" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.Group, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Group)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Item, new { @class = "col-md-4 control-label" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.Item, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Item)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="box ">
                            <div class="box-header with-border box-head-back">
                                <h3 class="box-title">Item Wise Repot</h3>
                            </div>
                            <div class="box-body">
                                <div class="form-group" style="text-align:center; padding-left:15px">
                                    <button type="button" class="btn skin-blue btn-flat">Item Wise Inventory Status</button>
                                </div>
                                <div class="form-group" style="text-align:center; padding-left:15px">
                                    <button type="button" class="btn skin-blue btn-flat">Single Depot FG Stock Balance</button>
                                </div>
                                <div class="form-group" style="text-align:center; padding-left:15px">
                                    <button type="button" class="btn skin-blue btn-flat">Single Depot Inventory Details Status</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
