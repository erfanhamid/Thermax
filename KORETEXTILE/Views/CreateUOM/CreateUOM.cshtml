@model BEEERP.Models.SalesModule.UOM

@{
    ViewBag.Title = "CreateUOM";
}

<style>
    h3 {
        background: #F1C40F;
        border-radius: 8px;
    }

    .btn {
        background-color: #2980B9;
        border: 2px solid groove;
        color: white;
        border-radius: 8px;
        min-width: 80px
    }

        .btn:hover {
            background-color: #82E0AA;
            color: #02110E;
        }

    tbody tr:hover {
        background-color: dodgerblue;
        color: white;
    }
</style>
<div class="row">
    <div>
        <div class="col-md-12">
            <h3 style="text-align:center">Create Unit</h3>
        </div>
    </div>
</div>
<div class="content">
    <div class="row">
        <div class="form-horizontal">
            <div class="box-body">
                <div>
                    <h4 style="color:red">@ViewBag.messege</h4>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="box ">
                            <div class="box-header with-border box-head-back" style="background: #82E0AA; text-align: left;">
                                <h5 class="box-title">Unit Details</h5>
                            </div>
                            <div class="box-body">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Id, "ID", new { @class = "col-md-4 control-label" })
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = "readonly", @Value = ViewBag.UomId })
                                        @Html.ValidationMessageFor(m => m.Id)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, "UoM", new { @class = "col-md-4 control-label" })
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Name, "", new { @style = "color: red" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div style="background-color:white; ">
                            <div class="form-group" style="padding:3px; height:70px;padding-top:17px">
                                <div class="col-md-12" style="text-align:center;">
                                    <input type="button" name="Save" id="save" value="Save" class="btn btn-primary" />
                                    <input type="button" name="Upate" id="update" value="Update" class="btn btn-primary" />
                                    @*<input type="button" name="Delete" id="delete" value="Delete" class="btn btn-primary" />*@
                                    <input type="button" name="Refresh" id="refresh" value="Refresh" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="box">
                            <div class="box-header with-border box-head-back" style="background: #82E0AA; text-align: left;">
                                <h5 class="box-title">Unit List</h5>
                            </div>
                            <div class="box-body">
                                <table class="table table-responsive" id="DepotList">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>UoM</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.Uom)
                                        {
                                            <tr class='clickable-row' value="@item.Id">
                                                <td>@item.Id</td>
                                                <td>@item.Name</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section scripts{

    <script>

        $(function () {
            $('#DepotList').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })

        $(document).ready(function () {

            $("#update").hide();
            $("#delete").hide();
            $("#BrnachName").focus();
        })
        $(document).on("keydown", "#BrnachName", function (e) {
            if (e.keyCode == 13 || e.keyCode == 9) {
                e.preventDefault();
                $("#save").click();
            }
        });
        $(document).on('click', '#refresh', function () {

            window.location.reload(true);
        });

        //textbox fillup
        $(document).on('click', '.clickable-row', function () {
            var id = $(this).attr("value");
                $.ajax({
                    url: '@Url.Action("GetUoMByid", "CreateUOM")',
                    contentType: "application/json;charset=utf-8",
                    data: { id: id },
                    type: 'GET',
                    dataType: 'json',
                    success: function (datas) {
                        if(datas==0)
                        {
                            alert("This depot doesn't exist.");
                        }
                        else {
                            $("#save").prop('disabled', true);
                            $("#update").show();
                            $("#delete").show();
                            $("#Id").val(datas.item.Id);
                            $("#Name").val(datas.item.Name);
                        }
                    }
                });
        });

        //save Depot
        $(document).on('click', '#save', function () {
            ValidateOnSaveClick()
            $("#save").prop('disabled',true);
                if (message == "")
                {
                    var uom = { Id: 0, Name: "" };
                    uom.Id = $("#Id").val();
                    uom.Name = $("#Name").val();
                    if (confirm('Do you want to save?')) {
                        $.ajax({
                        url: '@Url.Action("SaveUoM", "CreateUOM")',
                        contentType: "application/json;charset=utf-8",
                            data: JSON.stringify({ uom: uom }),
                        type: 'POST',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas == 0) {
                                alert("Save Failed or This UoM Name already exist");
                                $("#save").prop('disabled', false);
                            }
                            else {
                                alert("Save Sucessfull.");
                                location.reload();
                            }
                        }
                    });
                    }

                }
                else {
                    alert(message);
                    $("#save").prop('disabled', false);
                }
        });

        //update Depot
        $(document).on('click', '#update', function () {
            ValidateOnSaveClick()
            $("#update").prop('disabled', true);
            if (message == "") {
                var uom = { Id: 0, Name: "" };
                uom.Id = $("#Id").val();
                uom.Name = $("#Name").val();
                    if (confirm('Do you want to update?')) {
                         $.ajax({
                        url: '@Url.Action("UpdateUoM", "CreateUOM")',
                        contentType: "application/json;charset=utf-8",
                             data: JSON.stringify({ uom: uom }),
                        type: 'POST',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas == 0) {
                                alert("Update Failed");
                                $("#update").show();
                            }
                            else {
                                alert("Update Successfull.");
                                location.reload();
                            }
                        }
                    });
                    }

                }
                else {
                    alert(message);
                    $("#update").show();
                }
        });

        //Delete Depot
        $(document).on('click', '#delete', function () {
            $("#update").prop('disabled', true);
            $("#delete").prop('disabled', true);
            var id = $("#Slno").val();
            if (confirm('Are you sure you want to delete this from the database?')) {
                $.ajax({
                    url: '@Url.Action("DeleteDepotByid", "CreateUOM")',
                    contentType: "application/json;charset=utf-8",
                    data: { id: id },
                    type: 'GET',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas == 0) {
                            alert("Delete failed.");
                        }
                        else {
                            alert("Delete Successfull");
                            location.reload();
                        }
                    }
                });
            }
        });

        function ValidateOnSaveClick() {
            message = "";
            if ($("#Name").val() == "") {
                message += "UoM Name Required Field.\n";
            }
        }

    </script>

}