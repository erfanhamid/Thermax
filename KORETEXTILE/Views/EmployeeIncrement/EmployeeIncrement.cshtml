        function SetEmployeeIncrement() {
            Increment.IncrementID = $("#IncrementID").val();
            Increment.EmployeeID = $("#EmployeeID").val();
            Increment.EffectiveDate = $("#EffectiveDate").val();
            Increment.PreviousGross = $("#PreviousGross").val();
            Increment.PresentGross = $("#PresentGross").val();
            Increment.IRefNO = $("#IRefNO").val();
            Increment.IDescription = $("#IDescription").val();
        }

        function ValidateEmployeeIncrement() {
            isValid = true;
            if (Increment.EmployeeID == "") {
                setError("EmployeeID", "Employee ID is required field.");
                isValid = false;
            }
            if (Increment.EffectiveDate == "") {
                setError("EffectiveDate", "EffectiveDate is required field.");
                isValid = false;
            }
            if (Increment.PresentGross == "") {
                setError("PresentGross", "PresentGross is required field.");
                isValid = false;
            }
        }
        function Refresh() {
            $("#EmployeeID").val("");
            $("#IncrementID").val("");
            $("#EffectiveDate").val("");
            $("#PresentGross").val("");
            $("#PreviousGross").val("");
            location.reload();
        }

        function ClearOnSearch() {
            $("#IncrementID").val("");
            $("#Designation").val("");
            $("#EffectiveDate").val("");
            $("#PreviousGross").val("");
            $("#PresentGross").val("");
            $("#IRefNO").val("");
            $("#IDescription").val("");
        }
    </script>
}

