@section scripts{
    <script>
        $(function () {
            $('#DepartmentList').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })

        $(document).ready(function () {

            $("#update").hide();
            $("#delete").hide();

            //$(document).on('click', '#edit', function () {
            //    var id = $(this).attr("value");
            //});

            $(document).on('click', '#refresh', function () {
                window.location.reload(true);
            });


            $(document).on('click', '#save', function () {
            ValidateOnSaveClick()
            //$("#save").prop('disabled', true);
            if (isValid == true)
            {
                var sw = { SoftwareID: 0, SoftwareName: "" };
                sw.SoftwareID = $("#SoftwareID").val();
                sw.SoftwareName = $("#SoftwareName").val();
                if (confirm('Do you want to Save?')) {
                    $.ajax({
                        url: '@Url.Action("SaveSoftwareList", "SoftwareList")',
                        contentType: "application/json;charset=utf-8",
                        data: JSON.stringify({ sw: sw }),
                        type: 'POST',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas.Message == 0) {
                                alert("Software Name already exists");
                                $("#save").prop('disabled', false);
                            }
                            else {
                                alert("Saved Successfully");
                                location.reload();
                            }
                        }
                    });
                }
                else {
                    $("#save").prop('disabled', false);
                }
            }
            else {
                //alert(message);
                $("#save").prop('disabled', false);
            }
            });
           // $(".clickable-row").on('click', function (e) {
            $(document).on('click', ".clickable-row", function () {
                var id = $(this).attr("value");

                 $.ajax({
                    url: '@Url.Action("GetSoftwareINfo", "SoftwareList")',
                    contentType: "application/json;charset=utf-8",
                     data: JSON.stringify({ id: id }),
                    type: 'POST',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas.Message==0)
                        {
                            alert("This Software  doesn't exist.");
                        }
                        else {
                            $("#save").hide();
                            $("#update").show();
                            //$("#delete").show();
                            $("#SoftwareID").val(datas.info.SoftwareID);
                            $("#SoftwareName").val(datas.info.SoftwareName);

                        }
                    }
                });
            });



            $(document).on('click', '#update', function () {
            ValidateOnSaveClick()
            $("#update").prop('disabled', true);
            if (isValid == true)
            {
                var sw = { SoftwareID: 0, SoftwareName: "" };
                sw.SoftwareID = $("#SoftwareID").val();
                sw.SoftwareName = $("#SoftwareName").val();
                if (confirm('Do you want to update?')) {
                    $.ajax({
                        url: '@Url.Action("UpdateSoftwareList", "SoftwareList")',
                        contentType: "application/json;charset=utf-8",
                        data: JSON.stringify({ sw: sw }),
                        type: 'POST',
                        dataType: 'json',
                        success: function (datas) {
                            if (datas == 1) {
                                alert("Name already existed");
                                $("#update").prop('disabled', false);
                            }
                            else {
                                alert("Updated Successfully");
                                location.reload();
                            }
                        }
                    });
                }
                else {
                    $("#update").prop('disabled', false);
                }
            }
            else {
                //alert(message);
                $("#update").prop('disabled', false);
            }
            });

