                event.preventDefault();
                $("#DealerReport").attr("action", "/CustomerReport/GetDepotWiseReceivableSummary");
                $("#DealerReport").submit();
            });
            $(document).on('click', "#DealerContactSummary", function (event) {
                event.preventDefault();
                    $("#DealerReport").attr("action", "/CustomerReport/GetDealerContactSummary");
                    $("#DealerReport").submit();
            });
            $(document).on('click', "#DealerCollection", function (event) {
                event.preventDefault();
                if ($("#DepotId").val() == "") {
                    setError("DepotId", "Depot is required field");
                    isValid = false;
                } else {

                    $("#DealerReport").attr("action", "/CustomerReport/GetDealerCollectionSummary");
                    $("#DealerReport").submit();
                }
            });
            $(document).on('click', "#DepotZoneCollection", function (event) {
                event.preventDefault();
           
                $("#DealerReport").attr("action", "/CustomerReport/GetDepotZoneWiseCollectionSummary");
                    $("#DealerReport").submit();
               
            });
            $(document).on('click', "#SingleDealerCollection", function (event) {
                event.preventDefault();
                if ($("#DepotId").val() == "") {
                    setError("DepotId", "Depot is required field");
                    isValid = false;
                } else if ($("#CustomerID").val() == "") {
                    setError("CustomerID", "Dealer is required field");
                    isValid = false;
                }
                else
                {

                    $("#DealerReport").attr("action", "/CustomerReport/GetDealerCollectionDetails");
                    $("#DealerReport").submit();
                }
            });
            $(document).on('click', "#DepotWiseReceivable", function (event) {
                event.preventDefault();

                $("#DealerReport").attr("action", "/CustomerReport/GetDepotWiseReceiveableSummary");
                $("#DealerReport").submit();

            });
            $(document).on('click', "#SingleDealerAllRentDetails", function (event) {
                event.preventDefault();
                if ($("#DepotId").val() == "") {
                    setError("DepotId", "Depot is required field");
                    isValid = false;
                } else if ($("#CustomerID").val() == "") {
                    setError("CustomerID", "Dealer is required field");
                    isValid = false;
                }
                else {

                    $("#DealerReport").attr("action", "/CustomerReport/GetSingleDealerAllRentDetails");
                    $("#DealerReport").submit();
                }
            });
            $(document).on('click', "#SingleDepotAllRentSummary", function (event) {
                event.preventDefault();
                if ($("#DepotId").val() == "") {
                    setError("DepotId", "Depot is required field");
                    isValid = false;
                } 
                else {

                    $("#DealerReport").attr("action", "/CustomerReport/GetSingleDepotAllRentSummary");
                    $("#DealerReport").submit();
                }
            });

            
            
