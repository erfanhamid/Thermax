@using (Html.BeginForm("", "", FormMethod.Post, new { id = "RetailerReport", target = "_blank" }))
{
    <div class="content">
        <div class="row">
            <div class="form-horizontal">
                <div class="col-md-12">
                    <div class="col-md-6">
