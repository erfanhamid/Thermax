                                                @Html.ValidationMessageFor(m => m.AitILCNo, "", new { @style = "color: red" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.SupplierOfGoods,"Goods Supplier", new { @class = "col-md-4 control-label" })
